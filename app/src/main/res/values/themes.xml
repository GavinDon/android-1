<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.MaterialColdStart">
        <item name="android:windowBackground">@drawable/window_background_statusbar_toolbar_tab</item>
    </style>

    <style name="Theme.Base.Api" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorButtonNormal">?colorAccent</item>
    </style>

    <style name="Theme.Base" parent="Theme.Base.Api">
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="textColorPrimary">@android:color/black</item>
        <item name="cardColor">@color/cardview_light_background</item>
        <item name="itemColor">#87000000</item>
    </style>

    <color name="red_light">@color/md_red_200</color>
    <color name="red">@color/md_red_500</color>
    <color name="red_dark">@color/md_red_900</color>

    <style name="Theme.Red" parent="Theme.Base">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/md_red_700</item>
        <item name="colorPrimaryLight">@color/md_red_300</item>
        <item name="colorAccent">@color/md_orange_A200</item>
    </style>

    <color name="green_light">@color/md_green_200</color>
    <color name="green">@color/md_green_500</color>
    <color name="green_dark">@color/md_green_900</color>

    <style name="Theme.Green" parent="Theme.Base">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorPrimaryLight">@color/md_green_300</item>
        <item name="colorAccent">@color/md_amber_A200</item>
    </style>

    <color name="blue_light">@color/md_blue_200</color>
    <color name="blue">@color/md_blue_500</color>
    <color name="blue_dark">@color/md_blue_900</color>

    <style name="Theme.Blue" parent="Theme.Base">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/md_blue_700</item>
        <item name="colorPrimaryLight">@color/md_blue_300</item>
        <item name="colorAccent">@color/md_pink_A200</item>
    </style>

    <attr name="cardColor" format="color" />
    <attr name="itemColor" format="color" />
    <attr name="colorPrimaryLight" format="color" />
    <attr name="textColorPrimary" format="reference" />
    <attr name="toolbarTheme" format="reference" />
</resources>